extends ../layout

block content
  div(class='container-fliud text-center my-5 py-5')
    form(class='form-auth' action='/signup' method='POST')
      h3(class='h2 mb-3 font-weight-normal') Please sign up
      if error
        div(class='alert alert-warning')=error
      input(class='form-control' name='username' value='' type='email' placeholder='Email' required)
      input(class='form-control' name='password' value='' type='password' placeholder='Password' required)
      button(class='btn btn-lg btn-primary btn-block' type='submit') Sign Up
      a(class='btn btn-lg btn-link btn-block' href="/") Back