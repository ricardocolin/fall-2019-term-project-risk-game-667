extends ../layout

block content
  link(href='/stylesheets/navbar.css' rel='stylesheet')
  link(href='/vendor/icofont/icofont.min.css' rel='stylesheet')
  header#header.fixed-top
    .container.d-flex
      .logo.mr-auto
        a(href='/')
          img.img-fluid(src='/img/logo.png' width='160px' alt='')
      nav.nav-menu.d-none.d-lg-block
        ul
          li
            a(href='/') Home
          li.active
            a(href='/lobby') Lobby
          if user
            li
              a(href='/signout') Sign Out
          else
            li
              a(href='/signin') Sign In
            li
              a(href='/signup') Sign Up

  div(class='lobby-container container-fliud my-5')
    h3(class='display-4')=title
    if user
      h2(class='display-5')='Welcome ' + user.username +'!'
      p
        a(href='/game') Start a new game!
    else
      h2(class='display-5') Please authenticate to start playing!
    .row.my-3
      .col-md-4.order-md-2.mb-4
        div(id='chat')
      .col-md-8.order-md-1
        h4.mb-3 Games in progress
        .table-responsive-md
          table.table
            thead
              tr
                th(scope='col') Room id
                th(scope='col') Status
                th(scope='col') Link
            tbody
              tr
                th(scope='row') 1
                td playing
                td Join

        
    a.back-to-top(href='#')
    i.bx.bxs-up-arrow-alt
  script(src='/javascripts/bundles/chat.bundle.js')
  script(src='/javascripts/bundles/navbar.bundle.js')