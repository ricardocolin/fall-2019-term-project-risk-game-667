extends ../layout

block content
  nav(class='navbar navbar-expand navbar-dark bg-dark fixed-top justify-content-between')
    a(class='navbar-brand') Risk Game
    div(class='navbar-nav')
      if user
        a(href='/signout', class='nav-item nav-link') Sign Out
      else
        a(href='/signin', class='nav-item nav-link') Sign In
        a(href='/signup', class='nav-item nav-link') Sign Up

  div(class='lobby-container container-fliud my-5')
    h3(class='display-4')=title
    if user
      h2(class='display-5')='Welcome ' + user.username +'!'
      p
        a(href='/game') Start a New Game!
    else
      p Please login to join a game!
  div(id='chat')
  script(src='/javascripts/chat.bundle.js')